<%= form_for @profile, html: { multipart: true } do |f| %>

  <div class="field">
    <%= f.label :bio, "About Me" %><br>
    <%= f.text_field :bio %>
  </div>

  <div class="field">
    <%= f.label :avatar, "Profile picture" %><br>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Back", artists_profile_path(@profile) %>
