<%= form_for @profile, html: { multipart: true } do |f| %>

  <div class="field">
    <%= f.label :description, "Gallery description" %><br>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :avatar, "Profile picture" %><br>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Back", gallery_profile_path(@profile) %>
