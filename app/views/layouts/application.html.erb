<!DOCTYPE html>
<html>
<head>
  <title>Artify</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
    <% end %>
  <% end %>

  <% if current_artist %>
    <li><%= link_to "Log Out", destroy_artist_session_path, class: "nav-link" %></li>
  <% end %>

  <% if current_gallery %>
    <li><%= link_to "Log Out", destroy_gallery_session_path, class: "nav-link" %></li>
  <% end %> %>

<%= yield %>

  </body>
</html>
